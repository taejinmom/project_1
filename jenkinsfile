pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/taejinmom/project_1.git'  // GitHub 리포지토리 URL
        BRANCH = 'main'  // 사용하는 브랜치
        SPRING_SERVER = '172.18.0.10'  // Spring Boot 서버 IP
        SPRING_USER = 'root'  // Spring Boot 서버의 사용자 이름
        SPRING_PATH = '/app/project_1'  // Spring Boot 애플리케이션 경로
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Prepare') {
            steps {
                echo 'Preparing directories...'
                sh '''
                    mkdir -p ${SPRING_SERVER_PATH}
                    rm -rf ${SPRING_SERVER_PATH}/*
                '''
            }
        }

        stage('Copy Source to Spring Server') {
            steps {
                echo 'Copying source code to Spring server...'
                sh '''
                    cp -r * ${SPRING_SERVER_PATH}/
                '''
            }
        }

        stage('Done') {
            steps {
                echo 'Deployment to Spring server complete!'
            }
        }
    }

    post {
        success {
            echo 'All steps completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
