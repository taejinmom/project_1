pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/taejinmom/project_1.git'
        BRANCH = 'main'
        SPRING_SERVER = '172.18.0.10'
        SPRING_USER = 'root'
        SPRING_PATH = '/app/project_1'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repository...'
                git branch: "${BRANCH}", url: "${REPO_URL}"
            }
        }

        stage('Copy to Spring Server via SCP') {
            steps {
                echo 'Transferring files to Spring server...'
                sh """
                    ssh ${SPRING_USER}@${SPRING_SERVER} 'mkdir -p ${SPRING_PATH} && rm -rf ${SPRING_PATH}/*'
                    scp -r * ${SPRING_USER}@${SPRING_SERVER}:${SPRING_PATH}/
                """
            }
        }

        stage('Done') {
            steps {
                echo 'Deployment complete!'
            }
        }
    }

    post {
        success {
            echo 'All steps completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
